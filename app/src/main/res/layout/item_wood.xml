<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nen_vang">

    <TextView
        android:id="@+id/txtType4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Price"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtType2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtType2"
        app:layout_constraintTop_toBottomOf="@+id/txtType2" />

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtType2"
        app:layout_constraintStart_toEndOf="@+id/txtType2"
        app:layout_constraintTop_toTopOf="@+id/txtType2" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtType4"
        app:layout_constraintStart_toEndOf="@+id/txtType4"
        app:layout_constraintTop_toTopOf="@+id/txtType4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtType2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Type"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUpgrade"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:background="#020202"
        android:text="UPGRADE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toEndOf="@+id/txtSTT"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtType3"
        app:layout_constraintStart_toEndOf="@+id/txtType3"
        app:layout_constraintTop_toTopOf="@+id/txtType3" />

    <TextView
        android:id="@+id/txtSTT"
        android:layout_width="85dp"
        android:layout_height="61dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:text="DELETE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btnUpgrade"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnUpgrade"
        app:layout_constraintTop_toBottomOf="@+id/btnUpgrade" />

    <TextView
        android:id="@+id/txtType3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Country"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtType4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtType4"
        app:layout_constraintTop_toBottomOf="@+id/txtType4" />

</androidx.constraintlayout.widget.ConstraintLayout>